<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/tab_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tab_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:text="@string/app_name"
            android:textColor="#555555" />
    </LinearLayout>

    <TextView
        android:id="@+id/unreadCount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignRight="@id/item_contain"
        android:layout_alignTop="@id/item_contain"
        android:layout_marginRight="-4dp"
        android:background="@drawable/bg_message_unread"
        android:gravity="center"
        android:minWidth="16dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:visibility="gone" />

    <View
        android:id="@+id/dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/item_contain"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/item_contain"
        android:background="@drawable/bg_red_dot"
        android:visibility="gone" />
</RelativeLayout>